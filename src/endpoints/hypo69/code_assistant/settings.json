{
  "role": "doc_creator",
  "lang": "EN",
  "model": [ "gemini" ],
  "start_dirs": [],
  "gemini_generation_config": {
    "response_mime_type": "text/plain"
  },
  "gemini_model_name": "gemini-1.5-flash-8b",
  "openai_model_name": "gpt-4o-mini",
  "openai_assistant_id": "<OpenAI Assistant ID>",

  "exclude_dirs": [
    ".ipynb_checkpoints",
    "_experiments",
    "db",
    "node_modules",
    "__pycache__",
    "_examples",
    ".git",
    ".venv",
    "___+*",
    ".vs",
    ".vscode",
    "docs",
    "images",
    "exe"
  ],
  "exclude_files": [
    "version.py",
    "__init__.py",
    "header.py"
  ],
  "exclude_file_patterns": [
    ".*\\(.*\\).*",
    "___+.*",
    "___*.*"
  ],
  "output_directory": {
    "doc_creator": "<model>/<lang>",
    "code_checker": "consultant/<model>/<lang>"
  },
  "argparse": {
    "role": {
      "default": "code_checker",
      "choices": [ "doc_creator", "code_checker", "qa" ]
    },
    "lang": {
      "default": "en",
      "choices": [ "en", "ru" ]
    },
    "model": {
      "default": [ "gemini" ],
      "choices": [ "gemini", "openai" ]
    },
    "start_dirs": {
      "default": [ "<path_to_src>" ]
    }
  }
}
