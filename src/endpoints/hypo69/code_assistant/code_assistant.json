{
  "role": "doc_writer_md",
  "lang": "EN",
  "model": [ "gemini" ],
  "start_dirs": [],
  "gemini_generation_config": {
    "response_mime_type": "text/plain"
  },
  "gemini_model_name": "gemini-1.5-flash-8b",
  "openai_model_name": "gpt-4o-mini",
  "openai_assistant_id": "<OpenAI Assistant ID>",

  "exclude_dirs": [
    ".ipynb_checkpoints",
    "_experiments",
    "db",
    "node_modules",
    "__pycache__",
    ".git",
    ".venv",
    "___+*",
    "*___*",
    ".vs",
    ".vscode",
    "docs",
    "images",
    "exe",
    "pytest",
    "emil-design.com",
    "openai-assistants-quickstart"
  ],
  "exclude_files": [
    "version.py",
    "__init__.py",
    "header.py"
  ],
  "exclude_file_patterns": [
    ".*\\(.*\\).*",
    "___+.*",
    "___*.*",
    "*___*.*",
    "*___*"
  ],
  "include_files": [
    "*.py",
    "*.js",
    "*.htm*",
    "*.php",
    "*.txt",
    "*.md",
    "*.rst",
    "*.json",
    "*.yaml",
    "*.yml",
    "*.ini",
    "*.cfg",
    "Makefile",
    "LICENSE*",
    "CHANGELOG*",
    "CONTRIBUTING*",
    "CODE_OF_CONDUCT*",
    "*.png",
    "*.jpg",
    "*.jpeg",
    "*.svg",
    "conf.py"
  ],

  "output_directory": {
    "doc_writer_rst": "<model>/doc/rst/<lang>",
    "doc_writer_md": "<model>/doc/md/<lang>",
    "code_checker": "<model>/consultant/<lang>",
    "pytest": "../pytest/<model>/<lang>",
    "code_explainer": "<model>/explainer/<lang>"
  },
  "argparse": {
    "role": {
      "default": "code_checker",
      "choices": [ "doc_writer_rst", "doc_writer_md", "code_checker", "pytest", "code_explainer" ]
    },
    "lang": {
      "default": "en",
      "choices": [ "en", "ru" ]
    },
    "model": {
      "default": [ "gemini" ],
      "choices": [ "gemini", "openai" ]
    },
    "start_dirs": {
      "default": [ "<path_to_src>" ]
    }
  }
}
