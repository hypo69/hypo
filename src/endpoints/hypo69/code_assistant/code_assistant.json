{
  "role": "doc_writer_md",
  "lang": "EN",
  "model": [ "gemini" ],
  "start_dirs": [],
  "gemini_generation_config": {
    "response_mime_type": "text/plain"
  },
  "gemini_model_name": "gemini-1.5-flash-8b",
  "openai_model_name": "gpt-4o-mini",
  "openai_assistant_id": "<OpenAI Assistant ID>",

  "exclude_dirs": [
    ".ipynb_checkpoints",
    "_experiments",
    "db",
    "node_modules",
    "__pycache__",
    "_examples",
    ".git",
    ".venv",
    "___+*",
    ".vs",
    ".vscode",
    "docs",
    "images",
    "exe",
    "pytest"
  ],
  "exclude_files": [
    "version.py",
    "__init__.py",
    "header.py"
  ],
  "exclude_file_patterns": [
    ".*\\(.*\\).*",
    "___+.*",
    "___*.*"
  ],
  "include_files": [
    "*.py",
    "*.js",
    "*.htm*",
    "*.php",
    "README.MD",
    "INTRO.MD",
    "README.RU.MD",
    "INTRO.RU.MD",
    "README.EN.MD",
    "INTRO.EN.MD"
  ],
  "output_directory": {
    "doc_writer_rst": "<model>/doc/rst/<lang>",
    "doc_writer_md": "<model>/doc/md/<lang>",
    "code_checker": "<model>/consultant/<lang>",
    "pytest": "../pytest/<model>/<lang>"
  },
  "argparse": {
    "role": {
      "default": "code_checker",
      "choices": [ "doc_writer_rst", "doc_writer_md", "code_checker", "pytest" ]
    },
    "lang": {
      "default": "en",
      "choices": [ "en", "ru" ]
    },
    "model": {
      "default": [ "gemini" ],
      "choices": [ "gemini", "openai" ]
    },
    "start_dirs": {
      "default": [ "<path_to_src>" ]
    }
  }
}
